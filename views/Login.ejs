<%- include ("includes/header", { "title" : "Login" }) %>

<div class="container" style="margin-top: 50px">
  <%- include ("includes/ResponseAlert", { "request" : request }) %>

  <div class="row">
    <div class="col-md-12">
      <form action="<%= request.mainURL %>/Login" method="POST">
        <div class="form-group">
          <label class="fieldName">Email</label>
          <input
            type="email"
            placeholder="Enter email"
            name="email"
            class="form-control"
            required
          />
        </div>

        <div class="form-group">
          <label class="fieldName">Password</label>
          <input
            type="password"
            placeholder="Enter password"
            name="password"
            class="form-control"
            required
          />
        </div>

        <input
          type="submit"
          value="Login"
          class="btn btn-primary register-login-btn"
        />
      </form>
      <a
        class="fieldName forgotPassword mt-3"
        href="<%= request.mainURL%>/ForgotPassword"
        >Forgot Password ?</a
      >
      <p class="fieldName mt-3">
        Don't have a account ?
        <a
          class="fieldName ref-to-another-page"
          href="<%= request.mainURL%>/Register"
          >Register</a
        >
      </p>
    </div>
  </div>
</div>

<%- include ("includes/footer") %>
