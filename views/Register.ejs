<%- include ("includes/header", { "title" : "Register" }) %>

<div class="container" style="margin-top: 50px">
  <%- include ("includes/ResponseAlert", { "request" : request }) %>

  <div class="row">
    <div class="col-md-12">
      <form action="<%= request.mainURL %>/Register" method="POST">
        <div class="form-group">
          <label class="fieldName">Name</label>
          <input
            type="text"
            placeholder="Enter name"
            name="name"
            class="form-control"
            required
          />
        </div>

        <div class="form-group">
          <label class="fieldName">Email</label>
          <input
            type="email"
            placeholder="Enter email"
            name="email"
            class="form-control"
            required
          />
        </div>

        <div class="form-group">
          <label class="fieldName">Password</label>
          <input
            type="password"
            placeholder="Enter password"
            name="password"
            class="form-control"
            required
          />
        </div>
        <input
          type="submit"
          value="Register"
          class="btn btn-primary register-login-btn"
        />
      </form>
      <p class="fieldName mt-2">
        Already have an account ?
        <a
          class="fieldName ref-to-another-page"
          href="<%= request.mainURL%>/Login"
          >Login</a
        >
      </p>
    </div>
  </div>
</div>

<%- include ("includes/footer") %>
