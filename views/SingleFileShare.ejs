<%- include("includes/singleFileShare-Header") %>
<div class="main-container">
  <section class="upload-container">
    <form action="">
      <div class="drop-zone">
        <div class="icon-container">
          <img
            src="../public/img/upload.png"
            draggable="false"
            class="center"
            alt="File Icon"
          />
          <img
            src="../public/img/upload.png"
            draggable="false"
            class="left"
            alt="File Icon"
          />
          <img
            src="../public/img/upload.png"
            draggable="false"
            class="right"
            alt="File Icon"
          />
        </div>
        <input type="file" id="fileInput" />
        <div class="title">
          Drag-n-Drop your Files here or, <br />
          <span id="browseBtn">Choose a file</span>
        </div>
      </div>
    </form>
    <div class="progress-container">
      <div class="bg-progress"></div>
      <div class="inner-container">
        <div class="status">Uploading...</div>
        <div class="percent-container">
          <span class="percentage" id="progressPercent">0</span>%
        </div>
        <div class="progress-bar"></div>
      </div>
    </div>
    <div class="sharing-container">
      <p class="expire">Link expires in 24 hrs</p>
      <div class="input-container">
        <input type="text" id="fileURL" readonly />
        <div class="clipboardIcon">
          <img
            src="../public/img/copy-icon.svg"
            id="copyURLBtn"
            alt="copy to clipboard icon"
          />
          <span class="tooltiptext">Copy to clipboard</span>
        </div>
      </div>
      <p class="email-info">Or Send via Email</p>
      <div class="email-container">
        <form id="emailForm">
          <div class="filed">
            <label for="fromEmail">Your email</label>
            <input
              type="email"
              autocomplete="email"
              required
              name="from-email"
              id="fromEmail"
            />
          </div>

          <div class="filed">
            <label for="toEmail">Receiver's email</label>
            <input
              type="email"
              required
              autocomplete="receiver"
              name="to-email"
              id="toEmail"
            />
          </div>
          <div class="send-btn-container">
            <button type="submit">Send</button>
          </div>
        </form>
      </div>
      <!-- <p class="social-info">Or on social media platforms</p>
        <div class="social-container">
          <div id="share"></div>
        </div> -->
    </div>
  </section>
  <section class="extra-sharing-container">
    <p class="social-info">Or Scan the following QR Code:</p>
    <div class="qr-code-container">
      <div class="qr-code">
        <img src="" alt="qr-code" />
      </div>
    </div>
    <p class="social-info">Or on social media:</p>
    <div class="social-container">
      <div id="share"></div>
    </div>
  </section>
</div>
<img class="image-vector" src="../public/img/undraw-upload.svg" alt="" />
<div class="toast">Sample message</div>
<%- include("includes/singleFileShare-Footer") %>
